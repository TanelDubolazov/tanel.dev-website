---
import { SITE } from 'astrowind:config';
import signature from './signature.jpg'; // Import the image
---

<img
  src={signature.src}
  alt="Signature Logo"
  class="h-8 w-auto ml-2 rtl:ml-0 rtl:mr-2"
/>
<span
  class="self-center text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white"
>
  {SITE?.name}
</span>
